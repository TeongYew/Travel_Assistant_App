<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/translucent_black"
    android:id="@+id/passengersPopupRL">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_popup_outline"
        android:layout_margin="10dp"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_margin="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Adults: "
                android:textColor="@color/black"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="20dp"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_weight="1">
                <ImageButton
                    android:id="@+id/addAdultIB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle_button"
                    android:src="@drawable/add"
                    android:layout_margin="10dp"
                    android:padding="4dp"
                    android:contentDescription="Add"/>
                <EditText
                    android:id="@+id/adultCountET"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:inputType="number"
                    android:layout_margin="10dp"
                    android:padding="10dp"/>
                <ImageButton
                    android:id="@+id/removeAdultIB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle_button"
                    android:src="@drawable/remove"
                    android:layout_margin="10dp"
                    android:padding="4dp"
                    android:contentDescription="Remove"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_margin="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Kids: "
                android:textColor="@color/black"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="20dp"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_weight="1">
                <ImageButton
                    android:id="@+id/addKidIB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle_button"
                    android:src="@drawable/add"
                    android:layout_margin="10dp"
                    android:padding="4dp"
                    android:contentDescription="Add"/>
                <EditText
                    android:id="@+id/kidCountET"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:inputType="number"
                    android:layout_margin="10dp"
                    android:padding="10dp"/>
                <ImageButton
                    android:id="@+id/removeKidIB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle_button"
                    android:src="@drawable/remove"
                    android:layout_margin="10dp"
                    android:padding="4dp"
                    android:contentDescription="Remove"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>



</RelativeLayout>