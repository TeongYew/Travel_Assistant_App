<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/translucent_black"
    android:id="@+id/addItineraryRL">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:orientation="vertical"
        android:background="@drawable/rounded_popup_outline"
        android:layout_centerInParent="true">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/itineraryLocationET"
            android:hint="Location"
            android:padding="20dp"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/itineraryFromET"
            android:hint="Time"
            android:padding="20dp"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:inputType="none"
            android:focusable="false"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/itineraryToET"
            android:hint="Time Until (optional)"
            android:padding="20dp"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:inputType="none"
            android:focusable="false"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/itineraryNotesET"
            android:hint="Notes (optional)"
            android:padding="20dp"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addItineraryBtn"
            android:text="Add Location"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"
            android:padding="10dp"
            android:background="@drawable/round_btn"
            android:layout_marginTop="50dp"/>

    </LinearLayout>

</RelativeLayout>