<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/translucent_black"
    android:id="@+id/toPopupRL">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:background="@drawable/rounded_popup_outline"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/flightToET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Search Destination"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="30dp"
                android:layout_weight="1"/>
            <ImageButton
                android:id="@+id/flightToIB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="30dp"
                android:padding="10dp"
                android:background="@drawable/round_search_btn"
                android:src="@drawable/search"
                android:contentDescription="search"/>

        </LinearLayout>

        <ListView
            android:id="@+id/flightToLV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="40dp"/>

    </LinearLayout>


</RelativeLayout>